<Window x:Class="YellowCarrot.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YellowCarrot"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="450" Width="600" Background="#36393F" ResizeMode="NoResize">
    <Grid>
        <!-- Grid definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Tools -->

        <Label 
            Grid.Column="2"
            Grid.ColumnSpan="4"
            FontSize="30"
            Content="Recipe Details" 
            Margin="38,28,32,28" 
            Grid.RowSpan="2"
            Foreground="White" 
            FontFamily="Berlin Sans FB"
            />

        <Label
            Grid.ColumnSpan="2"
            Grid.Row="1"
            FontSize="20"
            Content="Name" 
            Margin="22,46,38,24"
            Foreground="White" 
            FontFamily="Berlin Sans FB" 
            Grid.Column="4" 
            Grid.RowSpan="2"
            />
        <Label
            Grid.ColumnSpan="2"
            Grid.Row="2"
            FontSize="20"
            Content="Ingredient" 
            Margin="13,13,25,54"
            Foreground="White" 
            FontFamily="Berlin Sans FB" 
            Grid.RowSpan="2"
            />
        <Label
            Grid.ColumnSpan="2"
            Grid.Row="3"
            FontSize="20"
            Content="Quantity" 
            Margin="29,18,22,0"
            Foreground="White" 
            FontFamily="Berlin Sans FB"
            />
        <TextBox
            Name="txtDetatilsIngredient"
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Foreground="White"
            VerticalContentAlignment="Center"
            Width="100"
            Height="30"
            BorderBrush="White"
            Background="Transparent"
            BorderThickness="0,0,0,5" 
            Margin="50,18,0,6" 
            />
        <Label
            Grid.ColumnSpan="2"
            Grid.Row="4"
            FontSize="20"
            Content="Tag" 
            Margin="49,18,11,0"
            Foreground="White" 
            FontFamily="Berlin Sans FB"
            />

        <TextBox 
            Name="txtDetailsTag"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Foreground="White"
            VerticalContentAlignment="Center"
            Width="100"
            Height="30"
            BorderBrush="White"
            Background="Transparent"
            BorderThickness="0,0,0,5" 
            Margin="50,18,0,6"
            />
        <TextBox
            Name="txtDetatilsQuantity"
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Foreground="White"
            VerticalContentAlignment="Center"
            Width="100"
            Height="30"
            BorderBrush="White"
            Background="Transparent"
            BorderThickness="0,0,0,5" 
            Margin="50,21,0,3"
            />
        <ListView
            Name="lvAllRecipesDetails"
            Grid.Row="2"
            Grid.Column="4"
            Grid.RowSpan="4"
            Grid.ColumnSpan="4"
            BorderThickness="10"
            BorderBrush="Gray"
            Margin="0,35,42,10"
             />

        <TextBox
            Name="txtDetatilsName"
            Grid.Row="1"
            Grid.Column="5"
            Grid.ColumnSpan="2"
            Foreground="White"
            VerticalContentAlignment="Center"
            BorderBrush="White"
            Background="Transparent"
            BorderThickness="0,0,0,5" 
            Margin="10,52,18,30" Grid.RowSpan="2" 
            />
        <Button 
            Name="btnBack"
            Grid.Column="4"
            Content="Back"
            FontFamily="Berlin Sans FB"
            Foreground="white"
            Background="Transparent"
            BorderThickness="2"
            BorderBrush="White" 
            Margin="0,0,1,20" 
            Grid.Row="6" 
            FontSize="10" 
            Click="btnBack_Click" 
            />
        <Button 
            Name="btnUnlock"
            Grid.Column="3"
            Content="Unlock"
            FontFamily="Berlin Sans FB"
            Foreground="white"
            Background="Transparent"
            BorderThickness="2"
            BorderBrush="White" 
            Margin="0,0,1,20" 
            Grid.Row="6" 
            FontSize="10" 
            Click="btnUnlock_Click" 
            />
        <Button 
            Name="btnUpdateRecipe"
            Grid.Column="3"
            Content="Save Recipe"
            FontFamily="Berlin Sans FB"
            Foreground="white"
            Background="Transparent"
            BorderThickness="2"
            BorderBrush="White" 
            Margin="39,39,37,35" 
            Grid.Row="6" 
            FontSize="10" 
            Grid.ColumnSpan="2" 
            Grid.RowSpan="2" Click="btnUpdateRecipe_Click" 
            />
        <Button 
            Name="btnAdd"
            Grid.Column="1"
            Content="Add"
            FontFamily="Berlin Sans FB"
            Foreground="white"
            Background="Transparent"
            BorderThickness="2"
            BorderBrush="White" 
            Margin="66,7,10,14" 
            Grid.Row="5" 
            FontSize="10" 
            Grid.ColumnSpan="2" Click="btnAdd_Click"  
            />
        <Button 
            Name="btnDelete"
            Grid.Column="5"
            Content="Delete Ingredient"
            FontFamily="Berlin Sans FB"
            Foreground="white"
            Background="Transparent"
            BorderThickness="2"
            BorderBrush="White" 
            Margin="54,1,18,20" 
            Grid.Row="6" 
            FontSize="10" 
            Grid.ColumnSpan="2" Click="btnDelete_Click"  
            />
    </Grid>
</Window>
